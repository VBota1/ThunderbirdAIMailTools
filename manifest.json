{
    "manifest_version": 2,
    "name": "AI Mail Tool",
    "version": "2.0.0",
    "description": "AI assistant for Thunderbird. Summarize emails, draft replies with custom instructions, create calendar tasks from emails, and perform bulk actions using Gemini, OpenAI, Claude, or Ollama.",
    "icons": {
        "48": "icon.svg"
    },
    "permissions": [
        "accountsRead",
        "messagesRead",
        "messagesUpdate",
        "compose",
        "storage",
        "unlimitedStorage",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "icon.svg",
        "default_title": "AI Mail Tool",
        "default_popup": "popup/index.html",
        "allowed_spaces": [
            "mail"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false,
        "browser_style": true
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "ai-mail-tool@gmail.com",
            "strict_min_version": "115.0",
            "strict_max_version": "147.*"
        }
    },
    "experiment_apis": {
        "calendarTasks": {
            "schema": "api/tasks/schema.json",
            "parent": {
                "scopes": [
                    "addon_parent"
                ],
                "paths": [
                    [
                        "calendarTasks"
                    ]
                ],
                "script": "api/tasks/implementation.js"
            }
        }
    }
}